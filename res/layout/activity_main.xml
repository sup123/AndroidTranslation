<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivavoce.MainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="@string/Speak" />

    <ImageButton
        android:id="@+id/image1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/description"
        android:src="@android:drawable/ic_btn_speak_now" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_centerHorizontal="true"
        android:text="@string/Dots" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignTop="@+id/radioGroup2" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            android:text="english" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="chinese" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="french" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="japanese" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="italian" />

        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="thai" />
    </RadioGroup>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="none"
        android:text="@string/translate" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="31dp" >

        <RadioButton
            android:id="@+id/radio00"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:checked="true"
            android:text="english" />

        <RadioButton
            android:id="@+id/radio11"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="chinese" />

        <RadioButton
            android:id="@+id/radio22"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="french" />

        <RadioButton
            android:id="@+id/radio33"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="japanese" />

        <RadioButton
            android:id="@+id/radio44"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="italian" />

        <RadioButton
            android:id="@+id/radio55"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="thai" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/image1"
        android:layout_below="@+id/textView1"
        android:background="@drawable/gradient"
        android:text="Input" />

    <Button
        android:id="@+id/buttonInput"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/radioGroup2"
        android:layout_below="@+id/textView1"
        android:background="@drawable/gradient"
        android:text="Output" />

    <Button
        android:id="@+id/buttonOutput"
        android:layout_width="1000dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/banner" />

</RelativeLayout>
